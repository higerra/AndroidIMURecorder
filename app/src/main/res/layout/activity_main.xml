<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yanhang.tangoimurecorder.MainActivity">

    <org.rajawali3d.surface.RajawaliSurfaceView
        android:id="@+id/gl_surface_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:columnCount="4"
        android:rowCount="4">

        <!-- Rotation-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Gyro.:"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:id="@+id/label_rx"
            android:layout_gravity="right"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_ry"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_rz"
            android:text="0.000000"/>

        <!-- Acceleration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Acce.:"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:id="@+id/label_ax"
            android:layout_gravity="right"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_ay"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_az"
            android:text="0.000000"/>

        <!-- user acceleration -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="LinAcce:"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:id="@+id/label_lx"
            android:layout_gravity="right"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_ly"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_lz"
            android:text="0.000000"/>

        <!-- gravity -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Gravity:"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:id="@+id/label_gx"
            android:layout_gravity="right"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_gy"
            android:text="0.000000"/>
        <TextView
            android:layout_width="@dimen/imu_number_width"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/label_gz"
            android:text="0.000000"/>

    </GridLayout>

    <!--<android.opengl.GLSurfaceView-->
        <!--android:id="@+id/video_surface_view"-->
        <!--android:layout_width="@dimen/video_width"-->
        <!--android:layout_height="@dimen/video_height"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:layout_alignParentTop="true"/>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_start_stop"
        android:text="@string/start_title"
        android:onClick="startStopRecording"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/record_pose"
            android:textAlignment="center"/>
        <ToggleButton
            android:id="@+id/toggle_pose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:onClick="tooglePoseRecording"/>
    </LinearLayout>


    <com.google.atap.tango.ux.TangoUxLayout
        android:id="@+id/layout_tango"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
